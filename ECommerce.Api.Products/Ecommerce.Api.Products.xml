        <member name="M:ECommerce.Api.Products.Controllers.ProductsController.GetProductAsync(System.Int32)">
            <summary>
            Get product by the provided Id.
            </summary>
            <returns>An IActionResult</returns>
            <response code="200">Returns the requested product</response>
            <remarks>
            Sample request
            <code>
            GET /products/1
            {
               "id": 1,
               "name": "Keyboard",
               "price": 20,
               "inventory": 100
            }
            </code>
            </remarks>
